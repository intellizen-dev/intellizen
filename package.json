{
  "publisher": "intellizen-dev",
  "name": "intellizen",
  "displayName": "IntelliZen",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "description": "A extension with ZenScript(Based CraftTweaker) for VSCode",
  "author": "intellizen-dev",
  "license": "MIT",
  "homepage": "https://github.com/intellizen-dev/intellizen#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/intellizen-dev/intellizen"
  },
  "bugs": {
    "url": "https://github.com/intellizen-dev/intellizen/issues"
  },
  "main": "./out/extension/main.cjs",
  "files": [
    "LICENSE",
    "out/*",
    "syntaxes"
  ],
  "engines": {
    "vscode": "^1.92.0"
  },
  "activationEvents": [
    "onLanguage:zenscript"
  ],
  "contributes": {
    "languages": [
      {
        "id": "zenscript",
        "aliases": [
          "ZenScript",
          "zenscript"
        ],
        "extensions": [
          ".zs",
          ".dzs"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "zenscript",
        "scopeName": "source.zenscript",
        "path": "syntaxes/zenscript.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development conc \"turbo langium:generate:watch\" \"turbo dev\"",
    "build": "turbo build",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "test": "pnpm build && vitest --typecheck",
    "test:update": "vitest --typecheck -u"
  },
  "dependencies": {
    "@stoplight/json-ref-resolver": "^3.1.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.8.0",
    "@types/node": "^22.9.0",
    "@types/wait-on": "^5.3.4",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.14.0",
    "pnpm": "^9.12.3",
    "reactive-vscode": "0.2.7",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.4",
    "wait-on": "^8.0.1"
  }
}
