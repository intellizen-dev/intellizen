{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ESNext"],
    "customConditions": ["dev"],
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "env.d.ts",
    "packages/**/*.ts",
    "tsup-default.config.ts"
  ]
}
