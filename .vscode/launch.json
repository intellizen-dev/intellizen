{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}/packages/vscode-extension"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/packages/vscode-extension/out/**/*.cjs"
      ],
      "trace": true,
      "autoAttachChildProcesses": true
    },
    {
      "name": "Attach to Language Server",
      "type": "node",
      "port": 6009,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/packages/vscode-extension/out/**/*.cjs",
        "${workspaceRoot}/node_modules/langium"
      ]
    }
  ]
}
